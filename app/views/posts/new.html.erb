<h1>Add new post</h1>

<%= semantic_form_for @post do |f| %>
    <%= f.inputs do %>
        <%= f.input :title %>
        <%= f.input :body %>
        <%= f.input :category %>
        <%= f.input :created_at, :as => :string %>
    <% end %>
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
    <% end %>
<% end %>